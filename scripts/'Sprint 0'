# === CRÃ‰ER LA STRUCTURE DE DOSSIERS ===
mkdir -p archipel/plan_b scripts .runtime

# === FICHIER CLIENT.PY ===
cat > archipel/plan_b/client.py << 'EOF'
"""Plan B Client - API de secours"""

import os
import json
from pathlib import Path
from typing import Optional, Dict, Any
import requests
from requests.adapters import HTTPAdapter
from urllib3.util.retry import Retry

class PlanBClient:
    def __init__(self, base_url: str = "http://127.0.0.1:5055", api_key: Optional[str] = None):
        self.base_url = base_url.rstrip('/')
        self.api_key = api_key or self._load_api_key()
        
        if not self.api_key:
            raise ValueError("API key required")
        
        self.session = self._create_session()
    
    def _load_api_key(self) -> Optional[str]:
        env_key = os.getenv("ARCHIPEL_PLANB_KEY")
        if env_key:
            return env_key
        
        key_path = Path(".runtime/api_key.txt")
        if key_path.exists():
            return key_path.read_text().strip()
        
        return None
    
    def _create_session(self):
        session = requests.Session()
        session.headers.update({
            "X-API-Key": self.api_key,
            "Content-Type": "application/json",
        })
        
        retry_strategy = Retry(total=3, backoff_factor=1)
        adapter = HTTPAdapter(max_retries=retry_strategy)
        session.mount("http://", adapter)
        
        return session
    
    def status(self) -> Dict[str, Any]:
        try:
            response = self.session.get(f"{self.base_url}/status", timeout=5)
            response.raise_for_status()
            return response.json()
        except:
            return {"status": "error", "message": "API not reachable"}
    
    def ping(self) -> bool:
        try:
            resp = self.session.get(f"{self.base_url}/ping", timeout=2)
            return resp.status_code == 200
        except:
            return False
EOF

# === FICHIER INIT_PLANB.SH ===
cat > scripts/init_planb.sh << 'EOF'
#!/bin/bash
set -e

echo "ðŸš€ Initialisation Plan B"
echo "========================"

mkdir -p .runtime .planb logs

if [ ! -f .runtime/api_key.txt ]; then
    echo "ðŸ“ GÃ©nÃ©ration clÃ© API..."
    openssl rand -hex 32 > .runtime/api_key.txt
    echo "âœ… ClÃ©: $(cat .runtime/api_key.txt | cut -c1-8)..."
else
    echo "âœ… ClÃ© existante: $(cat .runtime/api_key.txt | cut -c1-8)..."
fi

echo ""
echo "âœ… Plan B prÃªt"
EOF

# === FICHIER ROTATE_PLANB_KEY.PY ===
cat > scripts/rotate_planb_key.py << 'EOF'
#!/usr/bin/env python3
import secrets
from pathlib import Path

def generate_api_key() -> str:
    return secrets.token_hex(32)

def main():
    key_path = Path(".runtime/api_key.txt")
    new_key = generate_api_key()
    
    key_path.parent.mkdir(exist_ok=True)
    key_path.write_text(new_key + "\n")
    
    print(f"âœ… Nouvelle clÃ©: {new_key[:8]}...{new_key[-8:]}")
    print(f"ðŸ“ Fichier: {key_path}")

if __name__ == "__main__":
    main()
EOF

# === RENDRE LES SCRIPTS EXÃ‰CUTABLES ===
chmod +x scripts/*.sh scripts/*.py

